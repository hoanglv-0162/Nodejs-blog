<h3>Chinh sua khoa hoc</h3>

<form method="POST" action="/courses/{{course._id}}?_method=PUT">
    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input input="text" class="form-control" id="name" name="name" value="{{course.name}}">
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea class="form-control" id="description" name="description">{{course.description}}</textarea>
    </div>
    <div class="mb-3">
        <label for="videoID" class="form-label">Video ID</label>
        <input input="text" class="form-control" id="videoID" name="videoID" value="{{course.videoID}}">
    </div>

    <button type="submit" class="btn btn-primary">OK</button>
</form>